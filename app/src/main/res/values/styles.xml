<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar_color</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar_color</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>
        <item name="colorOnSecondary">?colorOnPrimary</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_background</item>

        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>

        <item name="selectedBackground">@color/selected_background</item>

        <item name="android:importantForAutofill" tools:targetApi="26">noExcludeDescendants</item>

        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="appBarLayoutStyle">@style/AppBarLayout</item>
    </style>

    <style name="AppTheme.Old">
        <item name="colorPrimary">@color/color_primary_old</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar_color_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/navigation_bar_color_dark</item>
    </style>

    <style name="PlaceholderTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="HeaderTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:elevation" tools:targetApi="21">@dimen/action_bar_elevation</item>
    </style>

    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:elevation" tools:targetApi="21">@dimen/action_bar_elevation</item>
        <item name="android:background">?colorSurface</item>
    </style>
</resources>