<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/choice_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="?attr/dialogPreferredPadding"
        android:orientation="vertical">

        <CheckedTextView
            android:id="@+id/system_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="?android:attr/listChoiceIndicatorSingle"
            android:drawablePadding="20dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="?attr/listPreferredItemHeightSmall"
            android:paddingHorizontal="?attr/dialogPreferredPadding"
            android:text="@string/prefs_color_theme_system"
            android:textAppearance="?textAppearanceTitleMedium" />
    </LinearLayout>
</ScrollView>
