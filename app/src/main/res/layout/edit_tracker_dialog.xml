<android.support.design.widget.TextInputLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dialog_horizontal_padding"
    android:paddingRight="@dimen/dialog_horizontal_padding"
    android:paddingTop="@dimen/vertical_edge_padding">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/announce_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tracker_announce_url"
        android:inputType="textUri">
    </android.support.design.widget.TextInputEditText>
</android.support.design.widget.TextInputLayout>